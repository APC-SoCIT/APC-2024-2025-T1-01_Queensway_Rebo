{
  "name": "Laravel eCommerce App with MariaDB",
  "image": "mcr.microsoft.com/vscode/devcontainers/php:8.2",
  "features": {
    "ghcr.io/devcontainers/features/mariadb:2": {
      "version": "2"
    }
  },
  "settings": {
    "php.validate.executablePath": "/usr/local/bin/php",
    "php.suggest.basic": false,
    "php.debug.idekey": "VSCODE",
    "php.debug.executablePath": "/usr/local/bin/php"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "php.debug.executablePath": "/usr/local/bin/php"
      },
      "extensions": [
        "felixfbecker.php-intellisense",
        "xdebug.php-debug"
      ]
    }
  },
  "postCreateCommand": "./scripts/setup.sh && ./scripts/configure-env.sh",
  "runArgs": [
    "--network=host"
  ],
  "forwardPorts": [8000, 3306],
  "mounts": [
    "source=${workspaceFolder}/ecommerce.sql,target=/workspace/ecommerce.sql,type=bind"
  ],
  "postStartCommand": "./scripts/import-database.sh"
}
