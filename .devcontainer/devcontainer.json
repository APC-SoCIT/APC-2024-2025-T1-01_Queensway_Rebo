{
  "name": "Laravel + MySQL Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/var/www",
  "postCreateCommand": "chmod +x .devcontainer/init-db.sh && .devcontainer/init-db.sh && composer install && php artisan key:generate",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "xdebug.php-debug",
        "bmewburn.vscode-intelephense-client"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/ecommerce.sql,target=/workspace/ecommerce.sql,type=bind,consistency=cached"
  ]
}
